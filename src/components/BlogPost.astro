---
const { title, url, pubdate, tags} = Astro.props;
import Tags from "./Tag.astro";

---
<div class="p-3 ml-2 mr-2 w-full rounded bg-ghost shadow-lg hover:shadow-2xl mb-2">
    <a href={url}>
        <div class="flex flex-col">
            <h3>{title}</h3>
            <span class="text-xs">published: {pubdate}</span>
            <div>
                <span class="flex flex-row">
                    {tags.map((tag) => <Tags tag={tag} link=`/blog/tags/${tag}` />)} 
                </span>
            </div>
        </div>
    </a>
    
</div>
