---
import Button from "../components/Button.astro"
import ThemeIcon from './ThemeIcon.astro';
---
<header class="sticky top-0 bg-dark-olive p-3 border-b-4 border-sand shadow-2xl z-50">
    <nav class="flex flex-row justify-between items-center	">
        <div class="logo">
            <img src="https://placehold.co/150x50">
        </div>
        <div class="flex flex-row">
            <Button link="https://example.com" label="Click Me" severity="primary" />
            <Button link="https://example.com" label="Learn More" severity="secondary" />
            <ThemeIcon />
        </div>
    </nav>
</header>
