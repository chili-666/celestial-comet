---
import Tags from "./Tag.astro";
const { title, description, imageSrc, link, tags, rating, target, width } = Astro.props;
let stars = '';
for (let i = 0; i < rating; i++) {
    stars = stars + '<img src="/public/images/books/star.svg" width="16px" height="16px">'
}

const cardWidth = width ? "w-" + width : "w-80"

---
<!-- component -->
<!-- component -->

    <div class="max-w-[720px] mx-auto">
        <!-- Centering wrapper -->
        <div class=`relative flex flex-col text-gray-700 bg-ghost shadow-md bg-clip-border rounded-xl ${cardWidth} hover:shadow-xl border-solid border-2 botder-white`>
            <div class="relative overflow-hidden text-gray-700 bg-white bg-clip-border rounded-t-xl h-64">
                <img
                        src={imageSrc}
                        alt="card-image" class="object-cover w-full h-full" />
            </div>
            <div class="p-2">



                <div class="flex items-center justify-between mb-2">
                    <p class="block font-sans text-base antialiased font-medium leading-relaxed text-blue-gray-900">
                        {title}
                    </p>
                    <div class="p-2 flex flex-row" set:html={stars}></div>
                </div>
                <p class="block font-sans text-sm antialiased font-normal leading-normal text-gray-700 opacity-75 h-14 overflow-auto">
                    {description}
                </p>
            </div>
            <div class="p-3 pt-0">
                <a href={link}>
                <button
                        class="align-middle select-none font-sans font-bold text-center uppercase transition-all disabled:opacity-50 disabled:shadow-none disabled:pointer-events-none text-xs py-3 px-6 rounded-lg shadow-gray-900/10 hover:shadow-gray-900/20 focus:opacity-[0.85] active:opacity-[0.85] active:shadow-none block w-full bg-blue-gray-900/10 text-blue-gray-900 shadow-none hover:scale-105 hover:shadow-none focus:scale-105 focus:shadow-none active:scale-100"
                        type="button">
                    more ...
                </button>
                </a>
            </div>
            <div class="p-3 pt-0">
                <p class="antialiased font-medium leading-relaxed flex flex-row justify-center flex-wrap gap-2">
                    {tags.map((tag) => <Tags tag={tag} link=`/${target}/tags/${tag}` />)}
                </p>
            </div>
        </div>
    </div>
